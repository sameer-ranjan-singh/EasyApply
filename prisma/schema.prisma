generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id                     Int               @id @default(autoincrement())
    name                   String           
    email                  String            @unique
    password               String            @unique // Todo: remove the unique for password AND prisma migrate
    isAdmin                Boolean?          @default(false)
    collegeName            String?
    graduated              Boolean?
    currrntSem             Int?
    working                Boolean?         @default(false)
    freelanceExperience    Boolean          @default(false)
    onSiteInternship       Boolean          @default(false)
    remoteJobExperience    Boolean          @default(false)
    portfolioURL           String?          @unique
    links                  Link[]
}

model Link {
    id                     Int              @id @default(autoincrement())
    user                   User             @relation(fields: [userId], references: [id])
    userId                 Int              @unique
    portfolio              String?
    linkedin               String?
    twitter                String?
    github                 String?
    discord                String?
    reddit                 String?
    leetcode               String?
}